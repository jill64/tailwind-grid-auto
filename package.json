{
  "name": "@jill64/tailwind-grid-auto",
  "version": "1.0.15",
  "description": "A Tailwind CSS plugin for automatically adjusting of grid size",
  "main": "dist/index.js",
  "license": "MIT",
  "author": "jill64 <intents.turrets0h@icloud.com> (https://github.com/jill64)",
  "bugs": "https://github.com/jill64/tailwind-grid-auto/issues",
  "homepage": "https://github.com/jill64/tailwind-grid-auto#readme",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jill64/tailwind-grid-auto.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "pnpm build:lib && pnpm build:site && npx publint",
    "build:lib": "cd packages/lib && pnpm build",
    "build:site": "cd packages/site && pnpm build",
    "check": "cd packages/site && pnpm check",
    "prepack": "npm run build",
    "format": "npx prettier --write . --plugin prettier-plugin-svelte .",
    "lint": "npx prettier --check . --plugin prettier-plugin-svelte . && npx eslint . && pnpm check"
  },
  "peerDependencies": {
    "tailwindcss": "^3.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.8.0",
    "@typescript-eslint/parser": "6.8.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-svelte": "2.34.0",
    "prettier-plugin-svelte": "3.0.3",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "tailwindcss": "3.3.3"
  }
}
